extends layout.pug

append links
	

append styles
	style
		include ../public/css/register.css

block content
	//- include topbar.pug
	//- display-1= url
	.row
		.col-2.bg-1.d-none.d-lg-block
		.col.bg-2
			div
				.navbar.d-flex.justify-content-end
					.nav-item: a.nav-link(href='/favos') Index
					.nav-item: a.nav-link(href='/register') Sign up
					
				.container.d-flex.justify-content-start
					.col-lg-4.align-self-center
						div.flex-column#register-head
							.navbar-brand#login-brand
								<i class='fas fa-map'></i> FavoPlaces
							p Sign in
						<form action='/login' method='POST'>
							div.form-group
								label(for="usernameInput") Username
								input.form-control(name='username' type="text" id="usernameInput" placeholder="Username")
							<div class="form-group">
								<label for="exampleInputPassword1">Password</label>
								<input name='password' type="password" class="form-control" id="exampleInputPassword1" placeholder="Password">
							</div>
							<div class="form-group form-check">
								<input type="checkbox" class="form-check-input" id="exampleCheck1">
								<label class="form-check-label" for="exampleCheck1">Remember me</label>
							</div>
							<button type="submit" class="btn">SIGN IN</button>
							p: a(href="/register") Forget password
							p
								span New?  
								a(href="/register") SIGN UP
						</form>
